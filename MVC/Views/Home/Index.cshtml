@{
    ViewBag.Title = "Portail des énergies renouvelables en Valais";
}

@model MVC.Models.ProductionChartVm
@using System.Text.Json

<!-- Import de Bootstrap pour le style -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">

<div class="container py-5" style="max-width: 900px;">

    <!-- 🌞 Titre principal -->
    <h1 class="text-center fw-bold mb-5">
        Portail des énergies renouvelables en Valais
    </h1>

    <!-- 📈 Section graphique + bouton alignés -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="h4 mb-0">Production [kWh]</h2>

        <!-- Bouton Détail NER -->
        <a asp-action="NER"
           class="btn btn-primary shadow-sm"
           style="border-radius: 12px; padding: 10px 16px;">
            ➜ Détail NER
        </a>
    </div>

    <!-- 💠 Carte contenant le graphique -->
    <div class="card shadow-sm border-0" style="border-radius:16px;">
        <div class="card-body">
            <div class="ratio ratio-16x9">
                <canvas id="prodChart"></canvas>
            </div>
        </div>
    </div>

    <!-- 🌍 Diagramme circulaire NER -->
    <div class="my-5">
        @await Html.PartialAsync("_NERDiagramPartial")
    </div>

</div>

<!-- 📊 Script du graphique -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    const labels = @Html.Raw(JsonSerializer.Serialize(Model.Years));
    const series = @Html.Raw(JsonSerializer.Serialize(Model.KWh));

    const ctx = document.getElementById('prodChart');

    new Chart(ctx, {
        type: 'line',
        data: {
            labels: labels,
            datasets: [{
                label: 'kWh',
                data: series,
                borderColor: 'rgba(0, 99, 255, 0.8)',
                backgroundColor: 'rgba(0, 99, 255, 0.1)',
                tension: 0.3,
                fill: true,
                pointRadius: 4,
                borderWidth: 2
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: { display: false },
                tooltip: {
                    callbacks: {
                        label: (ctx) => `${ctx.parsed.y.toLocaleString()} kWh`
                    }
                }
            },
            scales: {
                x: {
                    title: { display: true, text: 'Années (10 dernières)' },
                    ticks: { autoSkip: false }
                },
                y: {
                    title: { display: true, text: 'kWh' },
                    beginAtZero: true
                }
            }
        }
    });
</script>