@* /Views/Shared/_NERDiagramPartial.cshtml *@
<div class="mt-5">
    <h2 class="h4 mb-3 text-center">Répartition par type d’énergie renouvelable</h2>

    <div class="card shadow-sm border-0 mx-auto" style="border-radius:16px; max-width: 600px;">
        <div class="card-body">
            <div class="ratio ratio-1x1">
                <canvas id="nerPieChart"></canvas>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    const nerLabels = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(
        (IEnumerable<string>)(ViewBag.NerLabels ?? new List<string>())
    ));
    const nerValues = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(
        (IEnumerable<double>)(ViewBag.NerValues ?? new List<double>())
    ));
    const nerYear = @Html.Raw(ViewBag.NerYear ?? 0);

    const nerCtx = document.getElementById('nerPieChart');

    new Chart(nerCtx, {
        type: 'pie',
        data: {
            labels: nerLabels,
            datasets: [{
                data: nerValues,
                backgroundColor: [
                    'rgba(100,149,237,0.8)',
                    'rgba(192,192,192,0.8)',
                    'rgba(255,205,86,0.8)',
                    'rgba(75,192,192,0.8)',
                    'rgba(153,102,255,0.8)'
                ],
                borderColor: '#fff',
                borderWidth: 2
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: { position: 'bottom' },
                title: {
                    display: true,
                    text: `Production cantonale brute — répartition (${nerYear})`
                },
                tooltip: {
                    callbacks: {
                        label: (ctx) => {
                            const total = nerValues.reduce((a,b)=>a+b,0);
                            const pct = total ? (ctx.parsed/total*100).toFixed(1) : 0;
                            return `${ctx.label}: ${ctx.parsed.toLocaleString()} GWh (${pct}%)`;
                        }
                    }
                }
            }
        }
    });
</script>

